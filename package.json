{
  "name": "aetherweb3-smartcontracts",
  "version": "1.0.0",
  "description": "Smart contracts for the Aetherweb3 ecosystem",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "npx hardhat test --gas",
    "test:coverage": "npx hardhat coverage",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "verify": "npx hardhat run scripts/verify.js",
    "estimate-gas": "npx hardhat run scripts/estimate-gas.js",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "lint:fix": "npx solhint 'contracts/**/*.sol' --fix",
    "format": "npx prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "size": "npx hardhat size-contracts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "dotenv": "^17.2.1",
    "hardhat": "^2.19.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  }
}
