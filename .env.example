# Environment Configuration for Aetherweb3 Smart Contracts
# Copy this file to .env and fill in your values

# Network RPC URLs
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Private Key (NEVER commit this to version control)
# Use a dedicated deployment account, not your main wallet
PRIVATE_KEY=0x...

# Etherscan API Keys for contract verification
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
BSCSCAN_API_KEY=YOUR_BSCSCAN_API_KEY

# Optional: Alchemy or other RPC providers
ALCHEMY_MAINNET_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
ALCHEMY_SEPOLIA_URL=https://eth-sepolia.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# Gas price settings (optional)
GAS_PRICE_MULTIPLIER=1.1

# Deployment configuration
DEPLOYMENT_NETWORK=sepolia
INITIAL_TOKEN_SUPPLY=1000000000000000000000000

# Aetherweb3 Token Creator Configuration
# Fee recipient address for token creation fees
# This is the address that receives 0.005 ETH/WETH for each token created
FEE_RECIPIENT=0xD10AA6E922a4F1804db6Ad3f0960Ed3dc116DD57

# Token Creator Settings
# Default token creation fee (0.005 ETH/WETH)
CREATION_FEE=0.005

# Ecosystem fee exemption addresses (comma-separated)
# These addresses can create tokens without paying fees
FEE_EXEMPT_ADDRESSES=0x0000000000000000000000000000000000000000

# Verification settings
AUTO_VERIFY_CONTRACTS=true
VERIFICATION_ATTEMPTS=3

# Cross-chain deployment settings
SUPPORTED_CHAINS=ethereum,polygon,bsc,arbitrum,optimism
